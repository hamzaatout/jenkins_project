pipeline {
    agent any
    
    environment {
        VIRTUAL_ENV = 'venv'
        PATH = "C:\\Users\\iTECH\\AppData\\Local\\Programs\\Python\\Python310;C:\\Users\\iTECH\\AppData\\Local\\Programs\\Python\\Python310\\Scripts;${env.PATH}"
    }
    
    stages {
        stage('Setup') {
            steps {
                script {
                    echo "Checking Python installation..."
                    bat 'python --version'
                    bat 'pip --version'
                    
                    echo "Setting up virtual environment..."
                    bat '''
                        if not exist venv (
                            python -m venv venv
                        )
                        call venv\\Scripts\\activate.bat
                        python -m pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }
        
        stage('Lint') {
            steps {
                script {
                    echo "Running code linting..."
                    bat '''
                        call venv\\Scripts\\activate.bat
                        flake8 app.py --max-line-length=100
                    '''
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    echo "Running unit tests..."
                    bat '''
                        call venv\\Scripts\\activate.bat
                        pytest tests/ -v
                    '''
                }
            }
        }
        
        stage('Coverage') {
            steps {
                script {
                    echo "Running code coverage analysis..."
                    bat '''
                        call venv\\Scripts\\activate.bat
                        coverage run -m pytest tests/
                        coverage report -m
                        coverage html
                    '''
                }
            }
        }
        
        stage('Security Scan') {
            steps {
                script {
                    echo "Running security scan..."
                    bat '''
                        call venv\\Scripts\\activate.bat
                        bandit -r . -f txt -o bandit-report.txt || exit 0
                        type bandit-report.txt
                    '''
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    echo "Deploying application..."
                    bat '''
                        call venv\\Scripts\\activate.bat
                        echo Deployment successful!
                        python app.py
                    '''
                }
            }
        }
    }
    
    post {
        always {
            echo "Archiving artifacts..."
            archiveArtifacts artifacts: 'bandit-report.txt, htmlcov/**', allowEmptyArchive: true
            echo "Cleaning up workspace..."
            cleanWs()
        }
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed. Check the logs above for details."
        }
    }
}
